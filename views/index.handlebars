<div class="container">

  <div class="row" id="img">
    <br>
    <img src="../public/assets/img/burger.png" alt="burger">
  </div>

  <br>
  <h2 class="text-center" id="header">Eat-Da-Burger!</h2>
  <hr>

  <div class="row">
    <div class="col-md-6">
      New Burgers:
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <li>
              {{burger_name}}
              {{devoured}}
            </li>
          {{/unless}}
        {{/each}}  
      </ul>
    </div>
    <div class="col-md-6">
      Devoured Burgers:
       <ul>
        {{#each burgers}}
          {{#if devoured}}
            <li>
              {{burger_name}}
              {{devoured}}
            </li>
          {{/if}}
        {{/each}}  
      </ul>
    </div>
  </div>
</div>



<form class="create-form">
  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>
</form>